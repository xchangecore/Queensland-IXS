                            <config>users.txt</config>
                        </userRealm>
                    </userRealms>
                    <webAppSourceDirectory>${basedir}/target/${artifactId}-${version}</webAppSourceDirectory>
					<connectors>
						<connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
							<port>9095</port>
							<maxIdleTime>60000</maxIdleTime>
						</connector>
					</connectors>
