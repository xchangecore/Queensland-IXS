                    <contextPath>/uicds</contextPath>
                    <jettyEnvXml>${basedir}/src/test/jetty/jetty-env.xml</jettyEnvXml>
                    <userRealms>
                        <userRealm implementation="org.mortbay.jetty.security.HashUserRealm">
