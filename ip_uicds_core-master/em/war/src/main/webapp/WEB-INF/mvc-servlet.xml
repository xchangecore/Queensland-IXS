<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd 
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">


	<!-- Servlets -->
	<bean id="xsdController" class="com.saic.uicds.core.infrastructure.controller.SchemaController">
	</bean>

	<bean id="mapServiceWmsController"
		class="com.saic.uicds.core.em.controller.MapServiceWmsController">
		<property name="mapService" ref="mapService" />
	</bean>

	<bean id="workProductController"
		class="com.saic.uicds.core.infrastructure.controller.WorkProductController">
		<property name="workProductService" ref="workProductService" />
		<property name="supportedMethods" value="GET,POST,PUT" />
	</bean>

